<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php" colors="true">
    <testsuites>
        <testsuite name="Pact Consumer Tests">
            <directory>./tests/Consumer</directory>
        </testsuite>
    </testsuites>
    <listeners>
        <listener class="PhpPact\Consumer\Listener\PactTestListener">
            <arguments>
                <array>
                    <element key="0">
                        <string>Pact Consumer Tests</string>
                    </element>
                </array>
            </arguments>
        </listener>
    </listeners>
    <php>
        <env name="PACT_MOCK_SERVER_HOST" value="localhost"/>
        <env name="PACT_MOCK_SERVER_PORT" value="7200"/>
        <env name="PACT_CONSUMER_NAME" value="someConsumer"/>
        <env name="PACT_CONSUMER_VERSION" value="2.0.0"/>
        <env name="PACT_CONSUMER_TAG" value="future"/>
        <env name="PACT_PROVIDER_NAME" value="someProvider"/>
        <env name="PACT_OUTPUT_DIR" value="./pacts"/>
        <env name="PACT_BROKER_URI" value="http://localhost:9292"/>
        <env name="PACT_MOCK_SERVER_HEALTH_CHECK_TIMEOUT" value="10"/>
    </php>
</phpunit>
